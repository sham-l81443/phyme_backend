model Subject {
  id          String    @id @default(uuid()) @db.Uuid
  name        String
  code        String    @unique
  description String?
  classId     String    @db.Uuid
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  chapters    Chapter[]
  quizzes     Quiz[]
  class       Class     @relation(fields: [classId], references: [id])

  @@unique([name, classId])
}
