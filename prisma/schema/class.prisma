model Class {
  id   String @id @default(cuid())
  name String
  code String @unique
  description String?

  isActive Boolean @default(true)

  syllabusId String
  syllabus   Syllabus @relation(fields: [syllabusId], references: [id])

  subjects Subject[]
  users    User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

@@index([code])
@@unique([name, syllabusId])
}
