model Term {
    
    id        String   @id @default(cuid())
    name      String   
    code      String   @unique

    description String?
    isActive Boolean @default(true)

    subjects Subject[]

    syllabusId String
    syllabus   Syllabus  @relation(fields: [syllabusId], references: [id])

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
